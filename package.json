{
  "name": "teal-iris",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint": "pnpm --filter backend lint && pnpm --filter frontend lint",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "test": "pnpm --filter backend test"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "tsx": "^4.21.0"
  },
  "lint-staged": {
    "apps/backend/**/*.{ts,js}": [
      "pnpm --filter backend lint"
    ],
    "apps/frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter frontend lint"
    ]
  },
  "dependencies": {
    "@nestjs/config": "^4.0.3",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0"
  }
}
